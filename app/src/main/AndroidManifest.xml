<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.com.giancarellieceiza.sendmeal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight">

        <activity android:name=".Activities.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.Register"
            android:label=""
            android:parentActivityName=".Activities.Home"/>

        <activity
            android:name=".Activities.NewDish"
            android:label=""
            android:parentActivityName=".Activities.Home"/>

        <activity
            android:name=".Activities.Dishes"
            android:label=""
            android:parentActivityName=".Activities.Home" />

        <activity android:name=".Activities.NewOrder"
            android:label=""
            android:parentActivityName=".Activities.Dishes"/>

        <receiver android:name=".notification.MyNotificationPublisher" />

    </application>

</manifest>